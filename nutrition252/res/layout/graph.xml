<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/graphViewLayout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tvMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        />

    <TextView
        android:id="@+id/tvMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="240dp"
        />

    <TextView
        android:id="@+id/tvAvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="240dp"
        />

    <TextView
        android:id="@+id/tvHealthBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="240dp"
        android:text="Healthy or not" />

    <Button
        android:id="@+id/mealTableButtonGraphWindow"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/main_page_button"
        android:text="Meal Table"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>