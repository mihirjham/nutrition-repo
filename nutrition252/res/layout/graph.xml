<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/graphView"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:text="This is where the graph will be" />

    <TextView
        android:id="@+id/tvMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Maximum" />

    <TextView
        android:id="@+id/tvMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="200dp"
        android:text="Minimum" />

    <TextView
        android:id="@+id/tvAvg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="200dp"
        android:text="Average" />

    <TextView
        android:id="@+id/tvHealthBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="230dp"
        android:text="Healthy or not" />

    <Button
        android:id="@+id/mealTableButtonGraphWindow"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="375dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/main_page_button"
        android:text="Meal Table"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</RelativeLayout>